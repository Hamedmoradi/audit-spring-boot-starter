<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="audit" >
    <server> <!-- should point to the real audit server in production -->
        <service-url>http://log1:9081/audit/audit</service-url>
    </server>
    <headersFilter>branchCode, userName</headersFilter>
    <maskers>
        <masker>
            <masker-class>auditLogger.client.masking.commons.JsonValueMasker</masker-class>
            <finder-class>auditLogger.client.masking.commons.JsonValueFinder</finder-class>

            <!-- comma separated fields to be masked in json payloads -->
            <fields>pin2, pin, password</fields>
            <url-pattern>/*</url-pattern>
        </masker>
        <masker>
            <masker-class>auditLogger.client.masking.EmptyJsonMasker</masker-class>
            <url-pattern>/*/attachments</url-pattern>
        </masker>
    </maskers>
</configuration>